@model IEnumerable<Product>

@{
    var title = "Продукты";
    ViewData["Title"] = title;
}

<h2>@title</h2>

<div class="row">
    <div class="col-md-1">
        <a href="/products/add" class="btn btn-primary">Добавить продукт</a>
    </div>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Название продукта</th>
            <th>Цена</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>
                    <form class="form" action="cart/add/@product.Id" method="get">
                        <input type="hidden" name="productID" value="@product.Id"/>
                        <input type="number" name="count" value=""/>
                        <input type="submit" value="Купить" class="btn btn-success" />
                    </form>
                    @*<a href="cart/add/@(product.Id)" class="btn btn-success">Купить</a> *@
                    <a href="products/edit/@(product.Id)" class="btn btn-info">Редактировать</a>
                    @*@Html.ActionLink("Удалить", "Delete", htmlAttributes: new { @class = "btn btn-danger" }, routeValues: new { id = product.Id })*@
                    <a href="products/delete/@(product.Id)" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
